page{
    height: 100%;
    overflow: hidden;
}
.date-select {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  padding: 20rpx;
  justify-content:flex-end;
}

.picker-date {
  color: #10aeff;
}

.history-bill-table-title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #10aeff;
  justify-content:space-between;
  padding:10rpx 20rpx
}

.history-bill-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
  border-bottom: 1rpx solid #ddd;
  height: 100rpx;
  line-height: 100rpx;
}
.scroll-list{
    padding-bottom: 50rpx;
    height: 100%;
    box-sizing: border-box;
}
.spend-way-icon{
  width: 64rpx;
  height: 64rpx;
}
.item-remarks{
  flex: 1;
  text-overflow: ellipsis;
  padding-left: 10rpx;
  white-space:nowrap; 
  box-sizing: border-box;
  max-width: 130rpx;
  overflow: hidden;
}

.view-scroll{
  flex:1 1 auto;
  height:100%;
  overflow-y: scroll;
}


.detail_main{
  width: 100%;
}
.detial_title{
  display: flex;
  padding: 10rpx 20rpx;
  justify-content:space-between;
  font-size: 26rpx;
}
.datail_account{
  display: flex;
  width: 60%;
  justify-content:flex-end; 
}
.detail_detail{
  height: 100rpx;
  line-height: 100rpx;
  margin: 0rpx 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}
.detail_img{
  height: 80rpx; 
  width: 80rpx;
  margin-top:18rpx;
}
.top{
  display: flex;
  justify-content:space-between; 
  color: #000;
  padding: 20rpx;
  border-bottom:2px solid #f1f1f1;
}
.top view{
  flex-direction:row;
  text-align:left;
}
.cost_account,.income_account,.date_account{
  font-size: 24rpx;
}
.text-expend{
  color: grey;
  font-size: 20rpx;
  text-align: center;
}
.text-expend-num{
  color: #e64340;
  font-size: 38rpx;
  text-align: center;
}
.text-income-num{
  color: green;
  font-size: 38rpx;
  text-align: center;
}
.text-num{
  color: #10AEFF;
  font-size: 38rpx;
  text-align: center;
}