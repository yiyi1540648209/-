/* pages/record-expend/record-expend.wxss */

page {
  overflow: hidden;
  height: 100%;
}

.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.pay-money {
  margin: 20rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.money-icon {
  width: 32rpx;
  height: 32rpx;
}
.type-icon {
  width: 32rpx;
  height: 32rpx;
}
.date-text {
  color: gray;
  flex: 1;
  text-align: end;
}

.money-text {
  color: red;
  flex: 1;
  text-align: end;
}

.calculator {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  background-color:#fff;
  box-sizing: border-box;
  height: 400rpx;
}

.calculator-number {
  flex: 3;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
  box-sizing: border-box;
}

.number {
  border-right:1px solid #ff9900;
  border-top:1px solid #ff9900;
  border-radius:5px;
  flex: 1;
  text-align: center;
  vertical-align: middle;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 100%;
}
.number-hover{
background-color: #3B3B3B;
}

.calculator-operator {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.operator {
  border-top:1px solid #ff9900;
  flex: 2;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.section{
  display: flex;
  margin:20rpx;
  -webkit-align-items: center;
  align-items: center;
}
.section_gap{
    padding: 0 30rpx;
}
.section__title{
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.section_gap .section__title{
    padding-left: 0;
    padding-right: 0;
}
.radio-group {
    font-size:30rpx;
    flex:1;
    text-align:end;
}
.radio{
    margin-right: 20rpx;
}
.btn_box button{
   width: 40%;
   height: 80rpx;
   line-height: 80rpx;
}